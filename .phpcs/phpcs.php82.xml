<?xml version="1.0"?>
<ruleset name="PHPCS Coding Standards for PHPCompatibility">
    <description>Check the code for PHP8.2</description>

    <file>../library</file>
    <file>../tests</file>

    <!-- Only check PHP files. -->
    <arg name="extensions" value="php"/>
