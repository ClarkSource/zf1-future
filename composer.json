{
    "name": "ext/zf1-future",
    "description": "Zend Framework 1. The aim is to keep ZF1 working with the latest PHP versions",
    "type": "library",
    "version": "1.21.7",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=8.1 <8.4",
        "symfony/polyfill-php82": "^1.28",
        "symfony/polyfill-ctype": "^1.28",
        "symfony/polyfill-mbstring": "^1.28"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "rector/rector": "^0.12",
        "yoast/phpunit-polyfills": "^2.0",
        "phpstan/phpstan": "^1.10",
        "phpcompatibility/php-compatibility": "^9.3",
        "phan/phan": "^5.4",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "suggest": {
        "ext-mbstring": "Multibyte strings handling"
    },
    "autoload": {
        "psr-0": {
            "Zend_": "library/"
        }
    },
    "include-path": [
        "library/"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.12.x-dev"
        }
    },
    "archive": {
        "exclude": ["/demos", "/documentation", "/tests"]
    },
    "replace": {
        "zendframework/zendframework1": ">=1.12.20"
    },
    "scripts": {
        "post-install-cmd": "\"bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "post-update-cmd": "\"bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "lint": "parallel-lint --exclude vendor --exclude tests/Zend/Loader/_files/ParseError.php .",
        "test": [
            "@putenv XDEBUG_MODE=off",
            "phpunit -d memory_limit=-1 --bootstrap tests/TestHelper.php tests/Zend/AllTests.php"
        ],
        "phpcs-for-php81": "bin/phpcs -p --standard=./.phpcs/phpcs.php81.xml --report-csv=./.phpcs/results/php81_`date \"+%Y-%m-%d_%H%M%S\"`.csv",
        "phpcs-for-php82": "bin/phpcs -p --standard=./.phpcs/phpcs.php82.xml --report-csv=./.phpcs/results/php82_`date \"+%Y-%m-%d_%H%M%S\"`.csv",
        "phpcs-for-php83": "bin/phpcs -p --standard=./.phpcs/phpcs.php83.xml --report-csv=./.phpcs/results/php83_`date \"+%Y-%m-%d_%H%M%S\"`.csv",
        "phan-for-php81": "php -n bin/phan --allow-polyfill-parser --config-file .phan/php81.config.php --output-mode csv --output .phan/results/php81_`date \"+%Y-%m-%d_%H%M%S\"`.csv",
        "phan-for-php82": "php -n bin/phan --allow-polyfill-parser --config-file .phan/php82.config.php --output-mode csv --output .phan/results/php82_`date \"+%Y-%m-%d_%H%M%S\"`.csv",
        "phan-for-php83": "php -n bin/phan --allow-polyfill-parser --config-file .phan/php83.config.php --output-mode csv --output .phan/results/php83_`date \"+%Y-%m-%d_%H%M%S\"`.csv"
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/",
            "resources_": "tests/"
        }
    }
}
